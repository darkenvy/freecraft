{
  "name": "FreeCraft",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --config internals/webpack/prod.js",
    "build:dll": "webpack --display-chunks --color --config internals/webpack/dll.js --hide-modules",
    "build:simple": "browserify index.js -o bundle.js",
    "start:simple": "beefy index.js:bundle.js 8080 --live",
    "start": "node internals/server"
  },
  "keywords": [],
  "author": "Reno Mckenzie",
  "license": "ISC",
  "babel": {
    "presets": [
      "env"
    ]
  },
  "dllPlugin": {
    "path": "internals/dll",
    "exclude": [
      "beefy"
    ],
    "include": []
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "arrow-parens": [
        0,
        "as-needed"
      ],
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "class-methods-use-this": 0,
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "import/imports-first": 0,
      "import/newline-after-import": 0,
      "import/no-dynamic-require": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 2,
      "import/no-webpack-loader-syntax": 0,
      "import/prefer-default-export": 0,
      "indent": [
        1,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": 0,
      "newline-per-chained-call": 0,
      "no-confusing-arrow": 0,
      "new-cap": 0,
      "no-console": 1,
      "no-use-before-define": 0,
      "prefer-template": 2,
      "require-yield": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./internals/webpack/prod.js"
        }
      }
    }
  },
  "devDependencies": {
    "add-asset-html-webpack-plugin": "^2.1.3",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "beefy": "^2.1.8",
    "browserify": "^16.2.0",
    "circular-dependency-plugin": "^5.0.1",
    "copy-webpack-plugin": "^4.5.1",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.5",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^4.5.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.14",
    "webpack-dev-middleware": "^3.1.2",
    "webpack-hot-middleware": "^2.22.0"
  },
  "dependencies": {
    "voxel": "^0.5.0",
    "voxel-engine": "^0.20.2",
    "voxel-player": "^0.1.0"
  }
}
